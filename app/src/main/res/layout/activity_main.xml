<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="SegmentedTab Sample"
        android:titleTextColor="@android:color/white" />

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabGravity="fill" />

    <!-- FrameLayout for Tab Content -->
    <FrameLayout
        android:id="@+id/tabContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Tab 1 Content -->
        <LinearLayout
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextLimitTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Count loop"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextLimitTab1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Array size"
                android:inputType="number" />

            <Button
                android:id="@+id/calculatePrimesButtonTab1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with NDK" />

            <Button
                android:id="@+id/calculatePrimesButtonTab1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with java" />

            <TextView
                android:id="@+id/primesTextViewTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                android:text="Primes will appear here..."
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Tab 2 Content -->
        <LinearLayout
            android:id="@+id/tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextLimitTab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Count loop"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextLimitTab2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Array size"
                android:inputType="number" />

            <Button
                android:id="@+id/calculatePrimesButtonTab2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with NDK" />

            <Button
                android:id="@+id/calculatePrimesButtonTab2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with java" />

            <TextView
                android:id="@+id/primesTextViewTab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                android:text="Primes will appear here..."
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Repeat for Tabs 3, 4, 5 -->
        <LinearLayout
            android:id="@+id/tab3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">
            <EditText
                android:id="@+id/editTextLimitTab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Count loop"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextLimitTab3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Array size"
                android:inputType="number" />

            <Button
                android:id="@+id/calculatePrimesButtonTab3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with NDK" />

            <Button
                android:id="@+id/calculatePrimesButtonTab3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with java" />

            <TextView
                android:id="@+id/primesTextViewTab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                android:text="Primes will appear here..."
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">
            <EditText
                android:id="@+id/editTextLimitTab4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Count loop"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextLimitTab4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Array size"
                android:inputType="number" />

            <Button
                android:id="@+id/calculatePrimesButtonTab4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with NDK" />

            <Button
                android:id="@+id/calculatePrimesButtonTab4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with java" />

            <TextView
                android:id="@+id/primesTextViewTab4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                android:text="Primes will appear here..."
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">
            <EditText
                android:id="@+id/editTextLimitTab5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Count loop"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextLimitTab5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Array size"
                android:inputType="number" />

            <Button
                android:id="@+id/calculatePrimesButtonTab5_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with NDK" />

            <Button
                android:id="@+id/calculatePrimesButtonTab5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate with java" />

            <TextView
                android:id="@+id/primesTextViewTab5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                android:text="Primes will appear here..."
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
